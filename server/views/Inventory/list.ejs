<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">

    <title>Warehouse Inventory</title>
</head>
<body>
    <h1>Inventory List</h1>
    <table>
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Supplier</th>
                <th>Date Received</th>
                <th>Description</th>
                <th>Cost</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% ItemList.forEach(function(item) { %>
                <tr>
                    <td><%= item.ItemName %></td>
                    <td><%= item.Supplier %></td>
                    <td><%= item.DateReceived.toDateString() %></td>
                    <td><%= item.ItemDescription %></td>
                    <td><%= item.Cost %></td>
                    <td><%= item.Quantity %></td>
                    <td>
                        <a href="/inventory/edit/<%= item._id %>">Edit</a> |
                        <a href="/inventory/delete/<%= item._id %>">Delete</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/inventory/add">Add New Item</a>
</body>
</html>
